<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.stage.Stage?>
<?import javafx.scene.Scene?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="CENTER">

    <Label text="Enter Simulation Parameters" />

    <TextField fx:id="widthTextField" promptText="Width" />
    <TextField fx:id="heightTextField" promptText="Height" />
    <!-- Add more text fields for other parameters -->

    <Button text="Start Simulation" onAction="#onStartClicked" />
</VBox>

